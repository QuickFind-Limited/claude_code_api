# Claude SDK Server Configuration

# Application
APP_NAME="Claude SDK Server"
APP_VERSION="0.1.0"
DEBUG=false
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=true

# Claude SDK
ANTHROPIC_API_KEY="your-anthropic-api-key-here"
CLAUDE_MODEL=sonnet
CLAUDE_MAX_TOKENS=4096
CLAUDE_TIMEOUT=60

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET","POST","PUT","DELETE","OPTIONS"]
CORS_ALLOW_HEADERS=["*"]

# Redis (optional)
# REDIS_URL=redis://localhost:6379
# REDIS_TTL=3600

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Security (optional)
API_KEY_ENABLED=false
# API_KEYS=["key1","key2"]

# Odoo Connection Configuration
# Add these variables for Odoo ERP integration

# Your Odoo instance URL (without trailing slash)
ODOO_URL=https://your-instance.odoo.com

# Database name in Odoo
ODOO_DATABASE=your_database_name

# Your Odoo username (email)
ODOO_USERNAME=your.email@company.com

# Your Odoo password
ODOO_PASSWORD=your_password

# Example for a demo/test instance:
# ODOO_URL=https://demo.odoo.com
# ODOO_DATABASE=demo
# ODOO_USERNAME=demo
# ODOO_PASSWORD=demo